---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlockRenderer from '../../components/BlockRenderer.astro';

export async function getStaticPaths() {
  const agencies = await getCollection('agencies');
  return agencies.map((agency) => ({
    params: { slug: agency.id.replace(/\.md$/, '').replace(/\.json$/, '') },
    props: { agency },
  }));
}

const { agency } = Astro.props;
const { title, description, city, address, phone, email, mapUrl, blocks, sectionVariants } = agency.data;
const slug = agency.id.replace(/\.md$/, '').replace(/\.json$/, '');
const canonicalURL = `https://atecna-2026.fr/agences/${slug}`;

const breadcrumbs = [
  { name: 'Accueil', item: 'https://atecna-2026.fr/' },
  { name: 'Agences', item: 'https://atecna-2026.fr/agences' },
  { name: title, item: canonicalURL },
];
---

<BaseLayout {title} {description} {canonicalURL} {breadcrumbs}>
  <section class="py-20 md:py-28 bg-surface-2 text-text border-b border-border">
    <div class="container-custom grid gap-10 lg:grid-cols-[2fr,1fr]">
      <div class="space-y-4">
        <p class="text-xs uppercase tracking-[0.3em] text-primary font-semibold">Agence {city}</p>
        <h1 class="text-4xl md:text-5xl font-bold">{title}</h1>
        <p class="text-lg text-muted max-w-2xl">{description}</p>
      </div>
      <div class="rounded-3xl border border-border bg-surface p-6 space-y-4 text-sm text-muted">
        <div>
          <p class="font-semibold text-text">Adresse</p>
          <p>{address}</p>
        </div>
        <div>
          <p class="font-semibold text-text">Contact</p>
          <a
            href={`mailto:${email}`}
            class="block font-medium text-text hover:text-primary transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary"
          >
            {email}
          </a>
          <a
            href={`tel:${phone.replace(/[\\s().-]/g, '')}`}
            class="block font-medium text-text hover:text-primary transition-colors focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary"
          >
            {phone}
          </a>
        </div>
        {mapUrl && (
          <a
            href={mapUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary font-semibold inline-flex items-center gap-2"
          >
            Voir sur la carte â†’
          </a>
        )}
      </div>
    </div>
  </section>

  <BlockRenderer blocks={blocks} sectionVariants={sectionVariants} />
</BaseLayout>
