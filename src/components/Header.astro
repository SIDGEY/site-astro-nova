---
import { getEntry } from "astro:content";

const settings = await getEntry("settings", "general");
if (!settings) return Astro.redirect("/404");
const { navigation } = settings.data;
---

<nav
  class="fixed top-0 left-0 right-0 px-6 transition-all duration-300 border-b z-[999] bg-slate-800 border-slate-600/50 py-4"
>
  <div class="hidden lg:grid grid-cols-2 items-center h-12">
    <div class="flex items-center justify-start">
      <a href="/">
        <img src="/logo-horizontal.svg" alt="Astro Nova" class="h-12 w-auto" />
      </a>
    </div>
    <div class="flex items-center justify-end space-x-8">
      {
        navigation.map((item) => (
          <a
            href={item.link}
            class="text-slate-300 hover:text-blue-300 transition-colors"
          >
            {item.label}
          </a>
        ))
      }
      <div class="flex items-center space-x-2">
        <button
          class="py-2 px-6 whitespace-nowrap bg-blue-500 hover:bg-blue-600 rounded-md font-medium h-10 mr-2"
        >
          S'inscrire à la bêta
        </button>
        <a
          class="py-2 px-6 whitespace-nowrap border border-slate-600 backdrop-blur-xl text-slate-200 rounded-md font-medium h-10"
          href="/game"
        >
          Jouer
        </a>
      </div>
    </div>
  </div>

  <div class="lg:hidden flex items-center justify-between relative">
    <a href="/">
      <img src="/logo-icon.svg" alt="Astro Nova" class="h-12 w-auto" />
    </a>
    <button
      id="mobile-menu-toggle"
      class="absolute top-0 right-0 flex items-center justify-center w-12 h-12 rounded-full bg-slate-950 hover:bg-slate-900/90 transition-colors z-[1000] overflow-hidden"
      aria-label="Ouvrir le menu"
    >
      <div class="relative w-6 h-6">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="currentColor"
          viewBox="0 0 256 256"
          class="absolute inset-0 text-white transition-all duration-300 ease-in-out opacity-100 rotate-0 scale-100"
          id="icon-menu"
        >
          <path
            d="M224,128a8,8,0,0,1-8,8H40a8,8,0,0,1,0-16H216A8,8,0,0,1,224,128ZM40,72H216a8,8,0,0,0,0-16H40a8,8,0,0,0,0,16ZM216,184H40a8,8,0,0,0,0,16H216a8,8,0,0,0,0-16Z"
          ></path>
        </svg>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          fill="currentColor"
          viewBox="0 0 256 256"
          class="absolute inset-0 text-white transition-all duration-300 ease-in-out opacity-0 rotate-90 scale-50"
          id="icon-close"
        >
          <path
            d="M205.66,194.34a8,8,0,0,1-11.32,11.32L128,139.31,61.66,205.66a8,8,0,0,1-11.32-11.32L116.69,128,50.34,61.66A8,8,0,0,1,61.66,50.34L128,116.69l66.34-66.35a8,8,0,0,1,11.32,11.32L139.31,128Z"
          ></path>
        </svg>
      </div>
    </button>
  </div>

  <div
    id="mobile-menu"
    class="fixed left-0 right-0 bottom-0 backdrop-blur-xl flex items-center justify-center transition-all duration-500 opacity-0 pointer-events-none"
    style="top: 0px; bottom: 0px; background-color: rgba(30, 41, 59, 0.5);"
  >
    <div
      class="flex flex-col space-y-4 items-center text-center w-full px-12 md:px-6"
    >
      {
        navigation.map((item) => (
          <a
            href={item.link}
            class="text-slate-200 hover:text-blue-400 transition-colors py-4 text-2xl font-medium w-full"
          >
            {item.label}
          </a>
        ))
      }
      <button
        class="text-slate-200 hover:text-blue-400 transition-colors py-4 text-2xl font-medium"
      >
        S'inscrire à la bêta
      </button>
      <a
        class="text-slate-200 hover:text-blue-400 transition-colors py-4 text-2xl font-medium"
        href="/game"
      >
        Jouer
      </a>
    </div>
  </div>
</nav>

<script is:inline>
  const menuToggle = document.getElementById("mobile-menu-toggle");
  const mobileMenu = document.getElementById("mobile-menu");
  const iconMenu = document.getElementById("icon-menu");
  const iconClose = document.getElementById("icon-close");
  const mobileLinks = mobileMenu?.querySelectorAll("a");

  const setMenuOpen = (isOpen) => {
    if (!menuToggle || !mobileMenu || !iconMenu || !iconClose) return;

    // Toggle Menu Visibility
    if (isOpen) {
      mobileMenu.classList.remove("opacity-0", "pointer-events-none");
    } else {
      mobileMenu.classList.add("opacity-0", "pointer-events-none");
    }

    // Toggle Icons
    if (isOpen) {
      iconMenu.classList.add("opacity-0", "rotate-90", "scale-50");
      iconMenu.classList.remove("opacity-100", "rotate-0", "scale-100");

      iconClose.classList.add("opacity-100", "rotate-0", "scale-100");
      iconClose.classList.remove("opacity-0", "rotate-90", "scale-50");
    } else {
      iconMenu.classList.add("opacity-100", "rotate-0", "scale-100");
      iconMenu.classList.remove("opacity-0", "rotate-90", "scale-50");

      iconClose.classList.add("opacity-0", "rotate-90", "scale-50");
      iconClose.classList.remove("opacity-100", "rotate-0", "scale-100");
    }

    menuToggle.setAttribute("aria-expanded", String(isOpen));
  };

  if (menuToggle) {
    menuToggle.addEventListener("click", () => {
      const isOpen = menuToggle.getAttribute("aria-expanded") === "true";
      setMenuOpen(!isOpen);
    });
  }

  if (mobileLinks) {
    mobileLinks.forEach((link) => {
      link.addEventListener("click", () => setMenuOpen(false));
    });
  }
</script>
