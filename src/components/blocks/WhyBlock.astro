---
import Section from '../Section.astro';
import type { BgVariant } from '../../utils/bgHelper';

interface Props {
  whyTitle: string;
  whyText: string;
  whyBullets: string[];
  bgVariant?: BgVariant;
}

const { whyTitle, whyText, whyBullets, bgVariant } = Astro.props;
---

<Section variant={bgVariant}>
  <div class="grid gap-12 lg:grid-cols-[minmax(0,2fr)_minmax(0,1fr)] items-start">
    <div>
      <h2 class="section-title">{whyTitle}</h2>
      <p class="text-xl text-muted max-w-2xl mb-0">{whyText}</p>
    </div>
    <div class="card-basic">
      <ul class="space-y-4" aria-label="Raisons d'exister">
        {whyBullets.map((bullet) => (
          <li class="flex gap-3">
            <span class="mt-1 text-secondary" aria-hidden="true">‚óè</span>
            <span class="text-text leading-relaxed">{bullet}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</Section>
