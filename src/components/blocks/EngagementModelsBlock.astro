---
import Section from '../Section.astro';
import type { BgVariant } from '../../utils/bgHelper';

interface EngagementModel {
  title: string;
  when: string;
  benefit: string;
}

interface Props {
  title?: string;
  intro?: string;
  engagementModels: EngagementModel[];
  bgVariant?: BgVariant;
}

const { title, intro, engagementModels, bgVariant } = Astro.props;
---

<Section variant={bgVariant}>
  <div class="flex flex-col gap-10">
    <div class="max-w-3xl">
      {title && <h2 class="section-title">{title}</h2>}
      {intro && <p class="text-xl text-muted mb-0">{intro}</p>}
    </div>
    <div class="grid gap-6 md:grid-cols-3">
      {engagementModels.map((model) => (
        <div class="card-basic h-full flex flex-col gap-4">
          <h3 class="text-xl font-bold">{model.title}</h3>
          <div>
            <p class="text-sm font-semibold uppercase tracking-wide text-muted mb-2">Quand l'utiliser</p>
            <p class="text-muted leading-relaxed mb-0">{model.when}</p>
          </div>
          <div>
            <p class="text-sm font-semibold uppercase tracking-wide text-muted mb-2">Bénéfice clé</p>
            <p class="text-muted leading-relaxed mb-0">{model.benefit}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</Section>
